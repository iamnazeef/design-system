{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react",

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@tokens/reference": ["tokens/src/reference/index.ts"],
      "@tokens/globals": ["tokens/src/globals/index.ts"]
    }
  },
  "include": ["packages"]
}
